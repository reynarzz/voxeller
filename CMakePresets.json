{
  "version": 3,
  "cmakeMinimumRequired": { "major": 3, "minor": 18 },
  "configurePresets": [
    {
      "name": "desktop-release",
      "displayName": "Desktop Release",
      "description": "Build for host (macOS/Windows/Linux)",
      "hidden": false,
      "binaryDir": "${sourceDir}/build-desktop",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
		"BUILD_EDITOR":     "ON"
      }
    },
    {
      "name": "android-armeabi-v7a",
      "displayName": "Android armeabi-v7a",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/android-build/armeabi-v7a",
      "toolchainFile": "${sourceDir}/third/android-ndk/build/cmake/android.toolchain.cmake",
      "cacheVariables": {
        "ANDROID_ABI":      "armeabi-v7a",
        "ANDROID_PLATFORM": "android-21",
        "ANDROID_STL":      "c++_static",
        "BUILD_EDITOR":     "OFF"
      }
    },
    { 
      "name": "android-arm64-v8a",
      "displayName": "Android arm64-v8a",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/android-build/arm64-v8a",
      "toolchainFile": "${sourceDir}/third/android-ndk/build/cmake/android.toolchain.cmake",
      "cacheVariables": {
       "ANDROID_ABI": "arm64-v8a",
       "ANDROID_PLATFORM": "android-21",
       "ANDROID_STL": "c++_static",
       "BUILD_EDITOR":     "OFF"
      }
    },
    {
      "name": "android-x86",
      "displayName": "Android x86",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/android-build/x86",
      "toolchainFile": "${sourceDir}/third/android-ndk/build/cmake/android.toolchain.cmake",
      "cacheVariables": {
        "ANDROID_ABI": "x86",
        "ANDROID_PLATFORM": "android-21",
        "ANDROID_STL": "c++_static",
		"BUILD_EDITOR":     "OFF"
      }
	},
    {
      "name": "android-x86_64",
      "displayName": "Android x86_64",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/android-build/x86_64",
      "toolchainFile": "${sourceDir}/third/android-ndk/build/cmake/android.toolchain.cmake",
      "cacheVariables": {
        "ANDROID_ABI":      "x86_64",
        "ANDROID_PLATFORM": "android-21",
        "ANDROID_STL":      "c++_static",
        "BUILD_EDITOR":     "OFF"
      }
    },
	{
      "name": "ios-device",
      "displayName": "iOS Device",
      "generator": "Xcode",
      "binaryDir": "${sourceDir}/ios-build/device",
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME":          "iOS",
        "CMAKE_OSX_DEPLOYMENT_TARGET":"12.0",
        "CMAKE_OSX_ARCHITECTURES":    "arm64",
        "BUILD_EDITOR":               "OFF"
      }
    },
    {
      "name": "ios-simulator",
      "displayName": "iOS Simulator",
      "generator": "Xcode",
      "binaryDir": "${sourceDir}/ios-build/simulator",
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME":          "iOS",
        "CMAKE_OSX_DEPLOYMENT_TARGET":"12.0",
        "CMAKE_OSX_ARCHITECTURES":    "x86_64;arm64",
        "BUILD_EDITOR":               "OFF"
      }
    }
  ],
  "buildPresets": [
  {
     "name": "android-armeabi-v7a",
     "configurePreset": "android-armeabi-v7a"
   },
   {
     "name": "android-arm64-v8a",
     "configurePreset": "android-arm64-v8a"
   },
   {
     "name": "android-x86",
     "configurePreset": "android-x86"
   },
   {
     "name": "android-x86_64",
     "configurePreset": "android-x86_64"
   },
   {
	  "name": "ios-device",
	  "configurePreset": "ios-device"
	},
	{
	  "name": "ios-simulator",
	  "configurePreset": "ios-simulator"
	}
 ]
}
