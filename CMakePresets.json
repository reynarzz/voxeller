{
  "version": 3,
  "cmakeMinimumRequired": { "major": 3, "minor": 18 },
  "configurePresets": [
    {
      "name": "desktop-debug",
      "displayName": "Desktop Debug",
      "description": "Build for host (macOS/Windows/Linux)",
      "hidden": false,
      "binaryDir": "${sourceDir}/bin/desktop-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
		"BUILD_EDITOR":     "ON"
      }
    },
    {
      "name": "desktop-release",
      "displayName": "Desktop Release",
      "description": "Build for host (macOS/Windows/Linux)",
      "hidden": false,
      "binaryDir": "${sourceDir}/bin/desktop-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
      "CMAKE_INSTALL_PREFIX": "${sourceDir}/publish/desktop",  
		"BUILD_EDITOR":     "ON"
      }
    },
    {
      "name": "android-armeabi-v7a",
      "displayName": "Android armeabi-v7a",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/bin/android-build/armeabi-v7a",
      "toolchainFile": "${sourceDir}/third/android-ndk/build/cmake/android.toolchain.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "ANDROID_ABI":      "armeabi-v7a",
        "ANDROID_PLATFORM": "android-21",
        "ANDROID_STL":      "c++_static",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/publish/android/armeabi-v7a",
        "BUILD_EDITOR":     "OFF"
      }
    },
    { 
      "name": "android-arm64-v8a",
      "displayName": "Android arm64-v8a",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/bin/android-build/arm64-v8a",
      "toolchainFile": "${sourceDir}/third/android-ndk/build/cmake/android.toolchain.cmake",
      "cacheVariables": {
      "CMAKE_BUILD_TYPE": "Release",
       "ANDROID_ABI": "arm64-v8a",
       "ANDROID_PLATFORM": "android-21",
       "ANDROID_STL": "c++_static",
       "CMAKE_INSTALL_PREFIX": "${sourceDir}/publish/android/arm64-v8a",
       "BUILD_EDITOR":     "OFF"
      }
    },
    {
      "name": "android-x86",
      "displayName": "Android x86",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/bin/android-build/x86",
      "toolchainFile": "${sourceDir}/third/android-ndk/build/cmake/android.toolchain.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "ANDROID_ABI": "x86",
        "ANDROID_PLATFORM": "android-21",
        "ANDROID_STL": "c++_static",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/publish/android/x86",
		"BUILD_EDITOR":     "OFF"
      }
	},
    {
      "name": "android-x86_64",
      "displayName": "Android x86_64",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/bin/android-build/x86_64",
      "toolchainFile": "${sourceDir}/third/android-ndk/build/cmake/android.toolchain.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "ANDROID_ABI":      "x86_64",
        "ANDROID_PLATFORM": "android-21",
        "ANDROID_STL":      "c++_static",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/publish/android/x86_64",
        "BUILD_EDITOR":     "OFF"
      }
    },
	{
      "name": "ios-device",
      "displayName": "iOS Device",
      "generator": "Xcode",
      "binaryDir": "${sourceDir}/bin/ios-build/device",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_SYSTEM_NAME":          "iOS",
        "CMAKE_OSX_DEPLOYMENT_TARGET":"12.0",
        "CMAKE_OSX_ARCHITECTURES":    "arm64",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/publish/ios/device",
        "BUILD_EDITOR":               "OFF",
        "CMAKE_XCODE_ATTRIBUTE_SKIP_INSTALL": "YES",
        "CMAKE_XCODE_ATTRIBUTE_CODE_SIGNING_ALLOWED":  "NO",
           "CMAKE_XCODE_ATTRIBUTE_CODE_SIGNING_REQUIRED":"NO",
           "CMAKE_XCODE_ATTRIBUTE_CODE_SIGN_IDENTITY":   "",
           "CMAKE_XCODE_ATTRIBUTE_DEVELOPMENT_TEAM":     "",
           "CMAKE_XCODE_ATTRIBUTE_CODE_SIGN_ENTITLEMENTS":""
      }
    },
    { 
      "name": "ios-simulator",
      "displayName": "iOS Simulator",
      "generator": "Xcode",
      "binaryDir": "${sourceDir}/bin/ios-build/simulator",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_SYSTEM_NAME":          "iOS",
        "CMAKE_OSX_DEPLOYMENT_TARGET":"12.0",
        "CMAKE_OSX_ARCHITECTURES":    "x86_64;arm64",
        "BUILD_EDITOR":               "OFF",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/publish/ios/simulator",
        "CMAKE_XCODE_ATTRIBUTE_SKIP_INSTALL": "YES",
        "CMAKE_XCODE_ATTRIBUTE_CODE_SIGNING_ALLOWED":  "NO",
           "CMAKE_XCODE_ATTRIBUTE_CODE_SIGNING_REQUIRED":"NO",
           "CMAKE_XCODE_ATTRIBUTE_CODE_SIGN_IDENTITY":   "",
           "CMAKE_XCODE_ATTRIBUTE_DEVELOPMENT_TEAM":     "",
           "CMAKE_XCODE_ATTRIBUTE_CODE_SIGN_ENTITLEMENTS":""
      }
    }
  ],
  "buildPresets": [
  {
     "name": "desktop-release",
     "configurePreset": "desktop-release",
     "configuration": "Release"
  },
  {
     "name": "desktop-debug",
     "configurePreset": "desktop-debug",
     "configuration": "Debug"
  },
  {
     "name": "android-armeabi-v7a",
     "configurePreset": "android-armeabi-v7a",
     "configuration": "Release"
   },
   {
     "name": "android-arm64-v8a",
     "configurePreset": "android-arm64-v8a",
     "configuration": "Release"
   },
   {
     "name": "android-x86",
     "configurePreset": "android-x86",
     "configuration": "Release"
   },
   {
     "name": "android-x86_64",
     "configurePreset": "android-x86_64",
     "configuration": "Release"
   },
   {
	  "name": "ios-device",
	  "configurePreset": "ios-device",
      "configuration": "Release"
	},
	{
	  "name": "ios-simulator",
	  "configurePreset": "ios-simulator",
      "configuration": "Release"
	}
 ]
}
